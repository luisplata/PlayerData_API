{
    "name": "playerapi",
    "version": "1.0.0",
    "description": "A simple RESTful API for managing players using Node.js and Express.",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "migrate": "knex migrate:latest",
        "migrate:rollback": "knex migrate:rollback",
        "seed": "knex seed:run",
        "test": "mocha",
        "test:watch": "mocha --watch",
        "test:coverage": "nyc mocha",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-jwt": "^8.4.1",
        "jsonwebtoken": "^9.0.2",
        "knex": "^1.0.7",
        "mysql2": "^3.11.4",
        "pg": "^8.7.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "chai": "^4.3.7",
        "chai-http": "^4.3.0",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "mocha": "^10.2.0",
        "nodemon": "^3.0.1",
        "nyc": "^15.1.0",
        "prettier": "^3.0.0"
    }
}
